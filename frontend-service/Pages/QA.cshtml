@page
@model frontend_service.QAModel
@{
    ViewData["Title"] = "QA panel";
    string token = Request.Cookies["token_"];
    var resultTestShowDecstrElementsString = Model.TestDecstrElementsString();
    var resultTestGetCurDcmp = Model.TestGetRequestCurrentDecstr();
}

<div class="jumbotron">
    <p style="font-size: 58px">
        <img src="/Files/logo.png" width="80" height="80" align="middle"> QA panel
    </p>
</div>

<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingThree">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                    GET: /curdcmp
                </button>
            </h5>
        </div>
        <div id="collapseThree" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                @resultTestGetCurDcmp
            </div>
        </div>
    </div>  
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    Содержимое {decStr} по элементам
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                @foreach (string item in Startup.qaData.DecStrElements)
                {
                    @item<br />
                }
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Содержимое {decStr} строкой
                </button>
            </h5>
        </div>
        <div id="collapseOne" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                @resultTestShowDecstrElementsString
            </div>
        </div>
    </div>
</div>
